{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the item in the registry."
    },
    "type": {
      "type": "string",
      "enum": [
        "registry:lib",
        "registry:block",
        "registry:component",
        "registry:core",
        "registry:hook",
        "registry:page",
        "registry:file"
      ],
      "description": "Type of registry item."
    },
    "title": {
      "type": "string",
      "description": "Human-readable title. Keep short and descriptive."
    },
    "description": {
      "type": "string",
      "description": "Brief explanation of what this item does."
    },
    "author": {
      "type": "string",
      "description": "Author of the item. Recommended format: username <url>."
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "NPM dependencies required by this item."
    },
    "devDependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "NPM devDependencies required by this item."
    },
    "registryDependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other Catalix registry items or external registry URLs this depends on."
    },
    "files": {
      "type": "array",
      "description": "Files delivered by this registry item.",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file relative to the registry root."
          },
          "content": {
            "type": "string",
            "description": "The file contents (inline as string)."
          },
          "type": {
            "type": "string",
            "enum": [
              "registry:lib",
              "registry:block",
              "registry:component",
              "registry:core",
              "registry:hook",
              "registry:page",
              "registry:file"
            ],
            "description": "Type of file â€” matches registry item types."
          },
          "target": {
            "type": "string",
            "description": "Where in the project this file should be placed."
          }
        },
        "required": ["path", "type"],
        "additionalProperties": false
      }
    },
    "docs": {
      "type": "string",
      "description": "Optional documentation in markdown."
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Categories/tags for organizing the item."
    }
  },
  "required": ["name", "type", "files"],
  "additionalProperties": false
}
