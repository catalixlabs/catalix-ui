{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Catalix Registry",
  "description": "Top-level registry file containing all registry items for Catalix UI",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the registry (e.g., your project or organization name)."
    },
    "homepage": {
      "type": "string",
      "description": "URL for the registry homepage/documentation."
    },
    "items": {
      "type": "array",
      "description": "Array of all registry items.",
      "items": {
        "$ref": "https://catalix-ui.vercel.app/schema/registry-item.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["name", "homepage", "items"],
  "additionalProperties": false
}
